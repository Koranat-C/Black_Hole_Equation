# The code 
clc; clear; close all; % Parameters r = linspace(0,10,1000); sigma = 1; % ---- Quantum Wavefunction ---- Psi = exp(-r.^2/(2*sigma^2)); Psi = Psi / sqrt(trapz(r, Psi.^2)); figure; plot(r, abs(Psi).^2, 'LineWidth', 2); xlabel('r'); ylabel('|Ψ(r)|^2'); title('Quantum Mass Distribution of Black Hole'); grid on; set(gca,'FontSize',14); print('wavefunction_density.pdf','-dpdf'); % <-- Save for Overleaf % ---- Nonlinear Self-Gravity Feedback ---- G = 1; M = 1; epsilon = 0.1; rho = abs(Psi).^2; selfGravity = zeros(size(r)); for i = 1:length(r) selfGravity(i) = -G*M/(r(i)^2 + epsilon^2)^(3/2) * ... trapz(r(1:i), rho(1:i).*r(1:i).^2); end figure; plot(r, selfGravity, 'LineWidth', 2); xlabel('r'); ylabel('Self-gravity Potential'); title('Nonlinear Self-Gravity Feedback'); grid on; set(gca,'FontSize',14); print('self_gravity_feedback.pdf','-dpdf'); % <-- Save for Overleaf % ---- Spin Dependence ---- L_vals = [0, 0.5, 1]; figure; hold on; for L = L_vals f_spin = 1 + L*0.5; Psi_spin = exp(-r.^2/(2*sigma^2) * f_spin); Psi_spin = Psi_spin / sqrt(trapz(r, Psi_spin.^2)); plot(r, abs(Psi_spin).^2, 'LineWidth', 2); end xlabel('r'); ylabel('|Ψ(r)|^2'); title('Effect of Spin on Quantum Black Hole Distribution'); legend('L=0','L=0.5','L=1'); grid on; set(gca,'FontSize',14); print('spin_effect.pdf','-dpdf'); copy this into octave CLI
